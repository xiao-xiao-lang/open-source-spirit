{
    "scripts": {
    "build": "echo 'Cloudflare Pages build successful' && echo 'Static files in public/'"
  "name": "open-source-spirit",
  "version": "1.0.0",
  "description": "开源精神组织分号器管理系统 - 基于Cloudflare Pages的全栈应用",
  "main": "functions/_middleware.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev public --compatibility-flags=nodejs_compat --port=3000",
    "deploy": "wrangler pages deploy public --project-name=open-source-spirit",
    "deploy:prod": "wrangler pages deploy public --project-name=open-source-spirit --env=production",
    "build": "echo 'Building project...' && npm run db:prepare",
    
    "db:create": "wrangler d1 create open-source-spirit",
    "db:list": "wrangler d1 list",
    "db:info": "wrangler d1 info open-source-spirit",
    "db:execute": "wrangler d1 execute open-source-spirit --file=./db/schema.sql",
    "db:seed": "wrangler d1 execute open-source-spirit --file=./db/seed.sql",
    "db:test": "wrangler d1 execute open-source-spirit --file=./db/test-data.sql",
    "db:prepare": "npm run db:execute && npm run db:seed",
    "db:export": "wrangler d1 export open-source-spirit --output=./db/backup-$(date +%Y%m%d-%H%M%S).sql",
    "db:import": "wrangler d1 execute open-source-spirit --file=./db/backup.sql",
    "db:console": "wrangler d1 execute open-source-spirit --command='.tables'",
    
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write '**/*.{js,json,md,html,css,sql}'",
    "test": "jest --passWithNoTests",
    "test:api": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=api",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=unit",
    
    "clean": "rm -rf node_modules package-lock.json",
    "reinstall": "npm run clean && npm install",
    "preview": "wrangler pages dev public --local",
    
    "generate:password": "node -e \"const bcrypt = require('bcryptjs'); const saltRounds = 10; const password = process.argv[2] || 'admin123'; bcrypt.hash(password, saltRounds).then(hash => console.log('Bcrypt hash:', hash));\"",
    
    "start": "npm run dev",
    "postinstall": "echo '安装完成！请运行以下命令：\\n1. 配置数据库: npm run db:create\\n2. 初始化数据库: npm run db:prepare\\n3. 启动开发服务器: npm run dev'"
  },
  "keywords": [
    "open-source",
    "project-management",
    "cloudflare",
    "d1",
    "pages",
    "fullstack",
    "chinese"
  ],
  "author": "开源精神组织",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/open-source-spirit.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/open-source-spirit/issues"
  },
  "homepage": "https://open-source-spirit.pages.dev",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "nanoid": "^4.0.2",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/validator": "^13.11.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "wrangler": "^3.22.1"
  },
  "jest": {
    "testEnvironment": "jest-environment-node",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/__tests__/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "@typescript-eslint/no-explicit-any": "warn",
      "no-console": ["warn", { "allow": ["warn", "error"] }]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }

}


